---
interface Props {
  code: string;
  lang?: string;
  filename?: string;
  class?: string;
}

const {
  code,
  lang = 'bash',
  filename,
  class: className
} = Astro.props;

const lines = code.trim().split('\n');

function escapeHtml(text: string): string {
  return text
    .replace(/&/g, '&amp;')
    .replace(/</g, '&lt;')
    .replace(/>/g, '&gt;')
    .replace(/"/g, '&quot;');
}

function highlightLine(line: string, language: string): string {
  if (language === 'bash') {
    if (line.trim().startsWith('#')) {
      return `<span class="text-neutral-500">${escapeHtml(line)}</span>`;
    }
    return escapeHtml(line).replace(/@[\w-]+/g, '<span class="text-orange-600 font-semibold">$&</span>');
  }
  return escapeHtml(line);
}
---

<div class:list={['rounded-xl overflow-hidden border border-border bg-neutral-50', className]}>
  {/* Header */}
  <div class="flex items-center justify-between border-b border-border bg-white px-4 py-2">
    <div class="flex items-center gap-3">
      <div class="flex gap-1.5">
        <div class="h-3 w-3 rounded-full bg-red-400"></div>
        <div class="h-3 w-3 rounded-full bg-yellow-400"></div>
        <div class="h-3 w-3 rounded-full bg-green-400"></div>
      </div>
      {filename && (
        <span class="text-xs text-neutral-500 font-mono">{filename}</span>
      )}
    </div>
    <div class="flex items-center gap-2">
      <span class="text-xs text-neutral-400 uppercase tracking-wider">{lang}</span>
      <button
        type="button"
        class="copy-button rounded p-1.5 text-neutral-400 transition-colors hover:bg-neutral-100 hover:text-neutral-600"
        aria-label="Copier le code"
        data-code={code.trim()}
      >
        <svg class="h-4 w-4 copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        <svg class="h-4 w-4 check-icon hidden text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </button>
    </div>
  </div>

  {/* Code content */}
  <div class="overflow-x-auto">
    <pre class="p-4 text-sm leading-relaxed"><code class="font-mono text-neutral-700">{lines.map((line, i) => (
      <span class="block"><span class="inline-block w-8 select-none text-right text-neutral-400 mr-4">{i + 1}</span><span set:html={highlightLine(line, lang)} /></span>
    ))}</code></pre>
  </div>
</div>

<script>
  document.querySelectorAll('.copy-button').forEach(button => {
    button.addEventListener('click', async () => {
      const code = button.getAttribute('data-code');
      if (!code) return;

      try {
        await navigator.clipboard.writeText(code);
        const copyIcon = button.querySelector('.copy-icon');
        const checkIcon = button.querySelector('.check-icon');

        copyIcon?.classList.add('hidden');
        checkIcon?.classList.remove('hidden');

        setTimeout(() => {
          copyIcon?.classList.remove('hidden');
          checkIcon?.classList.add('hidden');
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });
</script>
