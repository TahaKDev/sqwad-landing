---
/**
 * Agents Listing Page
 * Displays all available AI agents in a responsive grid
 */
import BaseLayout from '@layouts/BaseLayout.astro';
import Navbar from '@components/layout/Navbar.astro';
import Footer from '@components/layout/Footer.astro';
import { AgentCard } from '@components/ui';
import { AGENTS_LIST } from '@lib/constants';
---

<BaseLayout title="Agents | Sqwad" description="Découvrez les agents IA spécialisés de Sqwad">
  <Navbar />

  <main class="pt-24 pb-16">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <header class="text-center mb-16">
        <h1
          class="text-4xl font-bold tracking-tight text-neutral-900 sm:text-5xl"
          style="animation: slideUp 0.5s ease-out"
        >
          Rencontrez la Sqwad
        </h1>
        <p
          class="mt-4 text-lg text-neutral-600 max-w-2xl mx-auto"
          style="animation: slideUp 0.5s ease-out 0.1s both"
        >
          Une équipe d'agents IA ultra-spécialisés, chacun expert dans son domaine.
        </p>
      </header>

      <div
        class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3"
        style="animation: fadeIn 0.8s ease-out 0.2s both"
      >
        {AGENTS_LIST.map((agent) => (
          <AgentCard {...agent} />
        ))}
      </div>

      <p class="mt-12 text-center text-sm text-neutral-500">
        Plus d'agents arrivent bientôt...
      </p>
    </div>
  </main>

  <Footer />
</BaseLayout>
