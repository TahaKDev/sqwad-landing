---
/**
 * Agent Use Cases Section
 * Displays when to invoke this agent
 */
import type { UseCase } from '@/lib/types';

interface Props {
  useCases: UseCase[];
  agentName: string;
}

const { useCases, agentName } = Astro.props;
---

<section class="border-t border-border py-16 sm:py-20 bg-neutral-50">
  <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold text-neutral-900 sm:text-3xl">
      Cas d'utilisation
    </h2>
    <p class="mt-2 text-neutral-600">Quand invoquer {agentName} :</p>
    <div class="mt-8 grid gap-4 sm:grid-cols-2">
      {useCases.map((useCase) => (
        <div class="rounded-xl border border-border bg-surface p-4">
          <h3 class="font-semibold text-neutral-900">{useCase.title}</h3>
          <p class="mt-1 text-sm text-neutral-600">{useCase.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
