---
/**
 * Agent Layout
 * Layout template for individual agent detail pages
 */
import '@/styles/global.css';
import Navbar from '@components/layout/Navbar.astro';
import Footer from '@components/layout/Footer.astro';

interface Props {
  title: string;
  description?: string;
  name: string;
  tagline: string;
  accentColor?: string;
}

const {
  title,
  description = 'Sqwad - Agent IA spécialisé',
  name,
  tagline,
  accentColor = '#64748b',
} = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style define:vars={{ accentColor }}>
      .accent-glow {
        box-shadow: 0 0 60px 20px color-mix(in srgb, var(--accentColor) 20%, transparent);
      }
    </style>
  </head>
  <body class="min-h-screen bg-surface text-neutral-900 antialiased">
    <Navbar />

    <main class="pt-24">
      <slot />
    </main>

    <Footer class="mt-20" />
  </body>
</html>
