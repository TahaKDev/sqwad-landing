---
/**
 * Agent Hero Section
 * Displays agent name, tagline, and animated image
 */
import { Image } from 'astro:assets';
import marcoImage from '@/assets/images/marco-bg.png';

interface Props {
  name: string;
  tagline: string;
  accentColor?: string;
}

const { name, tagline, accentColor = '#f97316' } = Astro.props;
---

<section class="relative overflow-hidden bg-gradient-to-b from-orange-50 to-white pt-12 pb-16 sm:pt-16 sm:pb-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center text-center">
      <div style="animation: slideUp 0.5s ease-out">
        <h1 class="text-4xl font-bold tracking-tight text-neutral-900 sm:text-5xl">
          {name}
        </h1>
        <p class="mt-4 text-xl text-neutral-600 max-w-2xl mx-auto">
          {tagline}
        </p>
      </div>

      <div class="mt-12" style="animation: slideUp 0.5s ease-out 0.2s both">
        <div style="animation: float 3s ease-in-out infinite">
          <Image
            src={marcoImage}
            alt={`${name}, le raton laveur orange expert Astro`}
            width={280}
            height={280}
          />
        </div>
      </div>
    </div>
  </div>
</section>
